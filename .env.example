# Evolution API Configuration
EVOLUTION_API_URL=http://localhost:8080
INSTANCE_NAME=whatsapp_new
# IMPORTANT: Change this API key for production
API_KEY=evolution_api_key

# Message Configuration
DELAY_BETWEEN_MESSAGES=2          # Seconds between messages
MAX_CONCURRENT_MESSAGES=5         # Maximum concurrent messages
RETRY_ATTEMPTS=3                  # Retry attempts for failed messages

# Logging
LOG_LEVEL=INFO                    # DEBUG, INFO, WARNING, ERROR

# Security
# Set to true in production to enforce HTTPS
ENFORCE_HTTPS=false